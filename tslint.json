{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": ["**/node_modules/**/*"]
  },
  "jsRules": {},
  "rules": {
    "no-bitwise": false,
    "interface-name": [true, "never-prefix"],
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "rulesDirectory": []
}
